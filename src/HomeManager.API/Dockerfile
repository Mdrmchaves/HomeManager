# -------- BUILD STAGE --------
FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

# Copiar csproj primeiro (melhor cache)
COPY src/HomeManager.API/HomeManager.API.csproj src/HomeManager.API/
RUN dotnet restore src/HomeManager.API/HomeManager.API.csproj

# Copiar tudo
COPY . .

WORKDIR /src/src/HomeManager.API
RUN dotnet publish -c Release -o /app/publish

# -------- RUNTIME STAGE --------
FROM mcr.microsoft.com/dotnet/aspnet:10.0
WORKDIR /app

COPY --from=build /app/publish .

ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "HomeManager.API.dll"]
